<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_layout_search_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="25dp"
        android:paddingStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_layout_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_layout_edit_text"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <EditText
        android:id="@+id/search_layout_edit_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Поиск"
        android:inputType="textPersonName"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingStart="16dp"
        android:textColorHint="@color/secondary_grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_layout_cancel_image"
        app:layout_constraintEnd_toStartOf="@+id/search_layout_cancel_image"
        app:layout_constraintStart_toEndOf="@+id/search_layout_search_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_layout_cancel_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <View
        android:id="@+id/search_layout_line_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/main_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_layout_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
