<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.medapp.presentation.MainFragment"
        android:label="@string/main_menu_title"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.medapp.presentation.MessagesFragment"
        android:label="@string/messages_menu_title"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/myHealthFragment"
        android:name="com.example.medapp.presentation.MyHealthFragment"
        android:label="@string/health_menu_title"
        tools:layout="@layout/fragment_my_health" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.medapp.presentation.NotificationFragment"
        android:label="@string/notification_menu_title"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.medapp.presentation.ProfileFragment"
        android:label="@string/profile_menu_title"
        tools:layout="@layout/fragment_profile" />
</navigation>
